<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_form_costing_form" model="ir.ui.view">
        <field name="name">costing.tree.view</field>
        <field name="model">farm.app.costing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="feeds_type"/>
                <field name="amount" sum="Total"/>
                <field name="purchase_price"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="view_form_farm_form" model="ir.ui.view">
        <field name="name">costing.tree.view</field>
        <field name="model">farm.app.costing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="feeds_type"/>
                        <field name="amount" sum="Total"/>
                        <field name="purchase_price"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>